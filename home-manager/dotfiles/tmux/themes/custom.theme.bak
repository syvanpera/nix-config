# This tmux statusbar config was created by tmuxline.vim
# https://github.com/edkolev/tmuxline.vim

set -g status-justify "left"
set -g status "on"
set -g status-left-style "none"

# Middle section
set -g message-command-style "fg=color8,bg=#a9b1d6"
set -g status-right-style "none"
set -g status-style "none,bg=color8"

# Active border on pane
set -g pane-active-border-style "fg=#5ccc96"

# When commands are run
set -g message-style "fg=#0f111b,bg=#b3a1e6"

# Inactive border on pane
set -g pane-border-style "fg=#a9b1d6"
set -g status-right-length "100"
set -g status-left-length "100"
setw -g window-status-activity-style "none"

# Separator colors
setw -g window-status-separator ""
setw -g window-status-style "none,fg=#a9b1d6,bg=#30365F"

# Left
set -g status-left "#[fg=#ecf0c1,bg=#30365F] #S #[fg=#30365F,bg=color8,nobold,nounderscore,noitalics]"

# Right
set -g status-right "#[fg=color8,bg=color8,nobold,nounderscore,noitalics]#[fg=#a9b1d6,bg=color8] %Y-%m-%d  %H:%M #[fg=#30365F,bg=color8,nobold,nounderscore,noitalics]#[fg=#ecf0c1,bg=#30365F] #h "
# Inactive window
setw -g window-status-format "#[fg=#a9b1d6,bg=color8] #I #[fg=#a9b1d6,bg=color8] #W "

# Active window
setw -g window-status-current-format "#[fg=color8,bg=#ad8ee6,nobold,nounderscore,noitalics]#[fg=color8,bg=#ad8ee6] #I #[fg=color8,bg=#ad8ee6] #W #[fg=#ad8ee6,bg=color8,nobold,nounderscore,noitalics]"

